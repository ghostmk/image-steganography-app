<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/enc_text_key_edt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:hint="Enter text key here"
        android:ems="10" />

    <EditText
        android:id="@+id/enc_text_edt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enc_text_key_edt"
        android:layout_below="@+id/enc_text_key_edt"
        android:layout_marginTop="62dp"
        android:hint="Enter secrete text here"
        android:ems="10" />

    <Button
        android:id="@+id/enc_text_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enc_text_edt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Encript" />

</RelativeLayout>